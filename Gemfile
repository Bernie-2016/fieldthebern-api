gem 'doorkeeper'
gem 'clearance'

gem 'spring', :group => :development

gem 'hashie'

gem 'pg'

gem 'koala'

gem 'sidekiq'

group :development, :test do
  gem 'dotenv-rails'
  gem 'rspec-rails'

  gem 'pry-rails'
  gem 'pry'
  gem 'pry-nav'
end

group :test do
  gem 'factory_girl_rails'
  gem 'oauth2'
  gem 'vcr'
  gem 'webmock'
end

